
<%- include("partials/header.ejs") %>

<form class="ui form container segment" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="ui main center container">
        <h1 class="ui center aligned header">New <%= blog.title %> </h1>
        </div>
    <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %> " required>
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value="<%=  blog.image %>" required>
   </div>
    <div class="field">
          <label>Text</label>
          <textarea name="blog[body]"> <%= blog.body %></textarea>
    </div>
    <input class="ui big violet basic button" type="submit"  value="save">


</form>



